doctype 5
html(lang="fr", data-ng-app="blog")
    head
        meta(http-equiv="content-type", content="text/html; charset=UTF-8")
        meta(name='fragment', content='!')

        title= "Why So Curious ?"
        link(href="css/application.css", type="text/css", rel="stylesheet")
        link(href="css/code-themes/custom.css", type="text/css", rel="stylesheet")
        - if (auth)
            link(href="css/admin.css", type="text/css", rel="stylesheet")
            -if (prod)
                script(src="/js/lib/require.min.js", data-main="/js/build/application.admin")
            -else
                script(src="/js/lib/require.min.js", data-main="/js/main.admin")
        -else
            - if (prod)
                script(src="/js/lib/require.min.js", data-main="/js/build/application")
            - else
                script(src="/js/lib/require.min.js", data-main="/js/main")

    body
        #header
            .container
                .title { Thomas BELIN }
                .menu
                    ul
                        li
                            a(href="/#!/")#home.state
                                p Home
                        li
                            a(href="/#!/posts")#posts.state
                                p Articles
        #main
            .container
                #find-me
                    .content
                        a(href='https://plus.google.com/118010420630912086698?rel=author', target='_blank', class='google')
                        a(href='https://twitter.com/ThomasBelin4', target='_blank', class='twitter')
                        a(href='https://github.com/thomasbelin4', target='_blank', class='github')
                        a(href='https://developer.mozilla.org/en-US/profiles/ThomasBelin4', target='_blank', class='mozilla')
                    strong.title Retrouvez moi
                #main-content(class='hide', data-ng-view)
        #footer
            p Thomas Belin
