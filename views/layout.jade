doctype 5
html(lang="en", data-ng-app="blog")
    head
        meta(http-equiv="content-type", content="text/html; charset=UTF-8")
        meta(name='fragment', content='!')

        title= "Why So Curious ?"
        link(href="css/application.css", type="text/css", rel="stylesheet")
        - if (auth)
            link(href="css/admin.css", type="text/css", rel="stylesheet")
            -if (prod)
                script(src="/js/lib/require.min.js", data-main="/js/build/application.admin")
            -else
                script(src="/js/lib/require.min.js", data-main="/js/main.admin")
        -else
            - if (prod)
                script(src="/js/lib/require.min.js", data-main="/js/build/application")
            - else
                script(src="/js/lib/require.min.js", data-main="/js/main")

    body()
        #header
            .container
                .title { Thomas BELIN }
                .menu
                    ul
                        li
                            a(href="/#!/")#home.state
                                p Home
                        li
                            a(href="/#!/posts")#posts.state
                                p Articles
        #main
            .container
                #main-content(data-ng-view)
        #footer
            p Thomas Belin
            p ThomasBelin4@gmail.com
