doctype 5
html(lang="fr", data-ng-app="blog")
    head
        meta(http-equiv="content-type", content="text/html; charset=UTF-8")
        meta(name="description", content="#{description}", data-meta-description="description")
        meta(name="author", content="Thomas Belin")

        title(data-ng-bind="title || '#{title}' ") #{title}
        - if (prod)
            - if (auth)
                link(href="/build/css/application.admin.css", type="text/css", rel="stylesheet")
                script(src="/build/js/application.admin.js")
            - else
                link(href="/build/css/application.css", type="text/css", rel="stylesheet")
                script(src="/build/js/application.js")
        - else
            link(href="/css/font-awesome.min.css", type="text/css", rel="stylesheet")
            link(href="/css/application.css", type="text/css", rel="stylesheet")
            link(href="/css/code-themes/custom.css", type="text/css", rel="stylesheet")
            script(src="/js/lib/require.min.js")
            script(src="/js/lib/angular/1.1.5/angular.min.js")
            script(src="/js/lib/angular/1.1.5/angular.sanitize.min.js")
            script(src="/js/lib/angular/1.1.5/angular.resource.min.js")
            script(src="/js/src/application.js")
            - if (auth)
                link(href="/css/admin.css", type="text/css", rel="stylesheet")
                script(src="/js/src/application.admin.js")
            script(src="/js/main.js")
    body
        .top-container
            #header
                .container
                    .title
                        a(href="/"){ Thomas BELIN }

            #main
                .container
                    #main-content(data-ng-view) !{content}
            .push
        #footer
            .container
                include _social
