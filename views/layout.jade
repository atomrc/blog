                #find-me
                    .content
                        a(href='https://plus.google.com/118010420630912086698?rel=author', target='_blank', class='google')
                        a(href='https://twitter.com/ThomasBelin4', target='_blank', class='twitter')
                        a(href='https://github.com/thomasbelin4', target='_blank', class='github')
                        a(href='https://developer.mozilla.org/en-US/profiles/ThomasBelin4', target='_blank', class='mozilla')
