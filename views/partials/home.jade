#welcome Bienvenue

.widget
    .widget-title Mes derniers articles
    #posts-container.widget-container
        ul#posts-list
            li.post(data-ng-repeat="post in posts")
                a(href="/posts/{{ post.slug }}")
                    h2{{ post.title }}
                    span.pubdate {{ post.pubdate | date }}
                    p.description{{ post.description }}

.widget
    .widget-title Mes derniers tweets
    .tweets-container.widget-container
        ul#tweets-list
            li.tweet(data-ng-repeat="tweet in tweets")
                span(data-ng-bind-html='tweet.text | urlconvert')
