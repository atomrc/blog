#welcome Bienvenue
- if (auth)
    p Thomas Belin

.widget
    .widget-title Mes derniers posts
    #posts-container.widget-container
        ul.posts-list
            li.post(ng-repeat="post in posts")
                a(href="/#/posts/{{ post.slug }}")
                    h2{{ post.title }}
                    span.pubdate {{ post.pubdate | date }}
                    p.description{{ post.description }}

.widget
    .widget-title Mes derniers tweets
    .tweets-container.widget-container
        ul.tweets-list
            li.tweet(ng-repeat="tweet in tweets")
                span(ng-bind-html='tweet.text')
