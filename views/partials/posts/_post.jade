article(itemscope="", itemtype="http://schema.org/Article", itemref="_image4 _desc")
    time.pubdate(datetime="{{post.pubdate}}", itemprop="datePublished", content="{{post.pubdate}}")
        span.day {{ post.pubdate | date:'d' }}
        br
        span.month {{ post.pubdate | date:'MMM' }}
        br
        span.year {{ post.pubdate | date:'yyyy' }}
    block title
        h1 {{post.title}}
    aside
        span.tags-list(data-ng-controller="tagsController")
            span(data-ng-repeat='tag in post.tags')
                span.tag
                    {{ tag.name }}
                    block tag_edit
                &nbsp;
        block tag_form
    block content
        p.description{{ post.description }}
