-if (auth)
    a.button(href="/post/create") Create
    br
//.filter-zone(data-ng-show="filteringTags.length > 0")
    | filtres :
    .filter(data-ng-repeat="tag in filteringTags", data-ng-bind="tag.name", data-ng-click="filteringTags.removeElement(tag);")
.card(data-ng-repeat="post in posts", data-ng-animate="'fade'")
    .post-element-wrapper(data-ng-click="show(post);")
        .highlighter(data-ng-class="{ active: post.$highlighted }")
        include _list
        -if (auth)
            span.edit-panel
                button.publish(data-ng-click='publish(post)', class='publish {{ post.published }}') publish
                button.delete(data-ng-click='remove(post)') delete
div(style="clear:both;")
