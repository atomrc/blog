- if (auth)
    a(href='/#/posts/create', class='button') Nouveau post
ul.posts-list
    li(ng-repeat='post in posts', class='published {{ post.published }}')
        a(href="/#/posts/{{ post.slug }}")
                h2 {{ post.title }}
                div.pubdate {{ post.pubdate | date }}
                p.description {{ post.description }}
                - if (auth)
                    .edit-panel
                        a.publish(ng-click='publishPost(post)')
                        a.edit(href='/#/posts/{{post.slug}}/edit')
                        a.delete(ng-click='deletePost(post)')
