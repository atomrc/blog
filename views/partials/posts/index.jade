- if (auth)
    admin
        a(href='/#!/post/create', class='button') Nouveau post
ul#posts-list
    li(data-ng-repeat='post in posts', class='published {{ post.published }}')
        a(href="/#!/posts/{{ post.slug }}")
                h2 {{ post.title }}
                div.pubdate {{ post.pubdate | date }}
                p.description {{ post.description }}
                - if (auth)
                    .edit-panel.admin
                        a.publish(data-ng-click='publishPost(post)')
                        a.edit(href='/#!/posts/{{post.slug}}/edit')
                        a.delete(data-ng-click='deletePost(post)')
