.edit-form(data-ng-controller="postController")
    button(data-ng-click='publish(post)', class='publish {{ post.published }}') Publish
    button(data-ng-click='reset(post)') Reset
    form(data-ng-submit='save(post)', draggable)
        input(type='text', data-ng-model='post.title')
        br
        textarea(data-ng-model='post.description')
        br
        textarea(class='article-body', data-ng-model='post.body')
        br
        input(type='submit')

